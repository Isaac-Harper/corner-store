<?xml version="1.0" encoding="utf-8"?>
<!-- Author: Isaac Harper  -->
<!-- lists saved recipes -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SavedFragment"
    android:background="#FFf6f6eb">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/titleLine1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".2"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="Saved Recipes"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@id/titleLine1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#ff323232"/>

    <ListView
        android:id="@+id/savedList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/titleLine1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:scrollbars="none"
        android:overScrollMode="never"/>





</androidx.constraintlayout.widget.ConstraintLayout>