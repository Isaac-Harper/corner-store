<!-- layout for row in search listview -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#ffdcd3ff"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ingredientItem"
        android:textSize="30dp"
        android:layout_weight="1"
        android:textColor="#ff323232"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ingredientAdd"
        android:text="Fridge"
        android:textColor="#ff323232"
        android:layout_margin="0dp"
        android:background="#FFffb3ba"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ingredientAddShopping"
        android:text="Cart"
        android:textColor="#ff323232"
        android:layout_margin="0dp"
        android:background="#ffbaffc9"/>

    </LinearLayout>

</LinearLayout>